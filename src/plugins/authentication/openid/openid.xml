<?xml version="1.0" encoding="utf-8"?>
<install version="1.6" type="plugin" group="authentication">
	<name>plg_authentication_openid</name>
	<author>Joomla! Project</author>
	<creationDate>February 2006</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.6.0</version>
	<description>PLG_OPENID_XML_DESCRIPTION</description>
	<files>
		<filename plugin="openid">openid.php</filename>
		<filename>index.html</filename>
		<folder>openid</folder>
	</files>

	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="usermode" type="radio"
					default="2"
					description="PLG_OPENID_FIELD_USERMODE_DESC"
					label="PLG_OPENID_FIELD_USERMODE_LABEL"
				>
					<option value="2">JYes</option>
					<option value="1">JNo</option>
				</field>

				<field name="phishing-resistant" type="radio"
					default="0"
					description="PLG_OPENID_FIELD_PHISHING_RESISTANT_DESC"
					label="PLG_OPENID_FIELD_PHISHING_RESISTANT_LABEL"
				>
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>

				<field name="multi-factor" type="radio"
					default="0"
					description="PLG_OPENID_FIELD_MULTIFACTOR_DESC"
					label="PLG_OPENID_FIELD_MULTIFACTOR_LABEL"
				>
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>

				<field name="multi-factor-physical" type="radio"
					default="0"
					description="PLG_OPENID_FIELD_MULTIFACTOR_PHYSICAL_DESC"
					label="PLG_OPENID_FIELD_MULTIFACTOR_PHYSICAL_LABEL"
				>
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
			</fieldset>

		</fields>
	</config>
</install>
