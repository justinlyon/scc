<?xml version="1.0" encoding="utf-8"?>
<install version="1.6" type="plugin" group="content">
	<name>plg_content_example</name>
	<author>Joomla! Project</author>
	<creationDate>July 2010</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0</version>
	<description>PLG_CONTENT_EXAMPLE_XML_DESCRIPTION</description>

	<files>
		<filename plugin="example">example.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
		<!--
			if you want to install the language files in the plugin folder.
			Create a "language" folder at the root of the pack i.e
			language/en-GB/en-GB.plg_content_example.ini
			language/en-GB/en-GB.plg_content_example.sys.ini
		-->
	</files>
	<languages>
		<!--
			these files will be installed in the administrator/language folder.
		-->
		<language tag="en-GB">en-GB.plg_content_example.ini</language>
		<language tag="en-GB">en-GB.plg_content_example.sys.ini</language>
	</languages>

	<config>
		<fields name="params">

			<field name="field1" type="text"
				description="Example field 1"
				label="Example field 1"
			/>

			<fieldset name="advanced">
				<field name="field2" type="text"
					description="Example field 2"
					label="Example field 2"
				/>
			</fieldset>

			<fieldset name="example">
				<field name="field3" type="text"
					description="Example field 3"
					label="Example field 3"
				/>
			</fieldset>

		</fields>
	</config>
</install>
